{
  "name": "regve",
  "displayName": "Regve",
  "description": "A fast and dynamic view engine similar to handlebars.",
  "version": "1.0.0",
  "publisher": "AspieSoft",
  "author": "AspieSoft",
  "license": "MIT",
  "icon": "icon-128x128.png",
	"repository": {
		"type": "git",
		"url": "git://github.com/aspiesoft/regve.git"
	},
  "engines": {
    "vscode": "^1.65.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "regve",
        "aliases": [
          "Regve",
          "regve"
        ],
        "extensions": [
          ".regve"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "regve",
        "scopeName": "text.html.regve",
        "path": "./syntaxes/regve.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.block.javascript": "javascript",
          "meta.embedded.block.css": "css",
          "meta.embedded.block.html": "html"
        }
      }
    ]
  }
}
